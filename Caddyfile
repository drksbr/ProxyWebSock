{
	auto_https off
}

# Optional Caddy front-end for the plain HTTP proxy when you want
# additional logging or middleware. The relay itself terminates TLS for
# /tunnel and the dashboard (port 8443).
:8080 {
	log {
		output stdout
		format console
		level INFO
	}

	@connect {
		method CONNECT
	}

	handle @connect {
		reverse_proxy relay:8080 {
			transport http {
				versions h1
			}
		}
	}

	handle {
		respond "Intratun HTTP proxy is available on this endpoint." 200
	}
}
